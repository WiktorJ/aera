<mujoco model="ar4_mk3 scene">
  <include file="ar4_mk3.xml"/>

  <statistic center="0.2 0 0.4" extent=".65"/>

  <visual>
    <headlight diffuse="0.8 0.8 0.8" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="150" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" file="../../textures/light-wood.png"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0"/>
    <material name="wallmaterial" rgba="0.5 0.5 0.5 1"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true" diffuse="0.3 0.3 0.3"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    <!-- Walls -->
    <geom name="wall_y_pos" type="box" size="3 0.01 1.5" pos="0 3 1.5" material="wallmaterial" contype="0" conaffinity="0"/>
    <geom name="wall_y_neg" type="box" size="3 0.01 1.5" pos="0 -3 1.5" material="wallmaterial" contype="0" conaffinity="0"/>
    <geom name="wall_x_pos" type="box" size="0.01 3 1.5" pos="3 0 1.5" material="wallmaterial" contype="0" conaffinity="0"/>
    <geom name="wall_x_neg" type="box" size="0.01 3 1.5" pos="-3 0 1.5" material="wallmaterial" contype="0" conaffinity="0"/>
    <!-- Ceiling -->
    <geom name="ceiling" type="box" size="3 3 0.01" pos="0 0 3" material="wallmaterial" contype="0" conaffinity="0"/>
<!--    <geom type="cylinder" size=".06 .06" pos="0 0 .06" rgba="1 1 1 1"/>-->
  </worldbody>
</mujoco>
